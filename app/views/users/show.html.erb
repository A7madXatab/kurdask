<div class="w-full flex flex-col justify-center items-center mt-10">

  <header class="w-full md:w-10/12">
    <div class="w-full bg-white rounded-md ">
      <header class="flex flex-col justify-center items-center" >
        <svg class="w-20 h-20 rounded-full p-2" style="background: #EEF0F1; margin-top: -30px" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
        <h1><%= @user.username %></h1>

        <section class="w-full md:px-5">
          <p><%= @user.about %></p>
        </section>
      </header>
    </div>
  </header>

  <main class="w-full md:w-10/12 my-4">
    <header class="flex justify-center mb-4">
      <form class="w-1/12 mx-4 flex justify-center <%= request.query_parameters[:tab] == 'questions' ? 'border-b-2 border-primary' : '' %>" action="">
        <button >
          <%= t '.questions' %>
        </button>
      </form>
      <form class="w-1/12 flex justify-center <%= request.query_parameters[:tab] == 'answers' ? 'border-b-2 border-primary' : '' %>" action="">
        <button >
          <%= t '.answers' %>
        </button>
      </form>
    </header>


    <main class="bg-white rounded-lg shadow p-3">
      <% if request.query_parameters[:tab] == 'questions'%>
          <% @user.questions.each do |q| %>
              <%= render 'questions/question', question: q %>
          <% end %>
      <% end %>
    </main>
  </main>

</div>