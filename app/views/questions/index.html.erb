<div id="test" class="w-full flex justify-center items-center mt-2 md:mt-10">
  <div class="bg-white rounded-md w-full lg:w-7/12 flex flex-col justify-center items-center  p-1 md:p-5">
    <% @questions.each do |question| %>
      <div class="flex flex-col md:flex-row justify-center items-start w-full p-2 border-b">

        <div class="flex md:hidden w-full justify-end items-center">
          <small><%= question.views %> <%= t 'questions.index.views' %></small>
          <small class="mr-2"><%= question.views %> <%= t 'questions.index.answers' %></small>
        </div>


        <div class="w-4/12 flex justify-center items-center text-sm hidden md:flex ">
          <div class="mx-4 flex flex-col items-center">
            <h1><%= question.views.count %></h1>
            <h3><%= t 'questions.index.views' %></h3>
          </div>
          <div class="flex flex-col items-center">
            <h1><%= question.answers.count %></h1>
            <h3><%= t 'questions.index.answers' %></h3>
          </div>
        </div>

        <div class="w-full md:w-8/12 flex-col items-end">
          <h1 class="text-md md:text-lg text-left text-primary capitalize">
            <a href="<%= question_path(question.title) %>"><%= question.formatted_title %></a>
          </h1>
          <div class="flex flex-row-reverse justify-between items-center w-full text-sm">
            <h6 class="">
              <b> <%= t 'questions.index.asked_by' %></b>
              <a
                class="link-primary"
                href="<%= user_show_path question.user.username %>">
                <%= question.user.username %>
              </a>
            </h6>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
