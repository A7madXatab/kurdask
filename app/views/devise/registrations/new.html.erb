<div class="w-full flex justify-center items-center flex-col md:flex-row-reverse">
  <aside class="w-full lg:w-4/12 mx-5">
    <header>
      <h1 class="font-bold">
        <%= t 'auth.about_community' %>
      </h1>
    </header>

    <main class="mt-3">
      <ul class="font-italic text-sm text-gray-800">
        <li>
          <em> - <%= t 'auth.ask_questions' %></em>
        </li>
        <li>
          <em>
            - <%= t 'auth.answer_questions' %>
          </em>
        </li>
      </ul>
    </main>
  </aside>


  <div class="flex flex-col w-full  lg:w-4/12">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: {
                     class: "flex flex-col w-full bg-white p-4 mt-4 rounded-md border border-gray-400 shadow"
                 }
        ) do |f| %>
      <header class="text-center">
        <h2><%= t 'nav.signup' %></h2>
      </header>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex w-full flex-col my-1">
        <%= f.label t "auth.email", class: "text-sm" %>
        <%= f.email_field :email, autofocus: false, autocomplete: "email" %>
      </div>

      <div class="flex w-full flex-col my-1">
        <%= f.label t "user.username", class: "text-sm"  %>
        <%= f.email_field :username, autofocus: false %>
      </div>

      <div class="flex w-full flex-col my-1">
        <%= f.label t "auth.password", class: "text-sm"  %>
        <%# if @minimum_password_length %>
        <!--        <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
        <%# end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="flex w-full flex-col my-1">
        <%= f.label t 'auth.confirm_password', class: "text-sm"  %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <button type="submit" class="self-center btn-primary mt-2 px-3 py-1">
        <%= t 'nav.signup' %>
      </button>
    <% end %>


    <%= render "devise/shared/links"%>
  </div>
</div>

