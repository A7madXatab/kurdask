<div class="w-full flex justify-center items-center flex-col md:flex-row-reverse">
  <aside class="w-full lg:w-4/12 mx-5">
    <header>
      <h1 class="font-bold">
        <%= t 'auth.about_community' %>
      </h1>
    </header>

    <main class="mt-3">
      <ul class="font-italic text-sm text-gray-800">
        <li>
          <em> - <%= t 'auth.ask_questions' %></em>
        </li>
        <li>
          <em>
            - <%= t 'auth.answer_questions' %>
          </em>
        </li>
      </ul>
    </main>
  </aside>


  <div class="flex flex-col w-full  lg:w-4/12">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: {
                     class: "flex flex-col w-full bg-white p-4 mt-4 rounded-md border border-gray-400 shadow"
                 }
        ) do |f| %>
      <header class="text-center">
        <h2 class="text-primary text-3xl"><%= t 'nav.signup' %></h2>
      </header>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex w-full flex-col my-1">
        <label for="user_email">
          <%= t 'auth.email' %>
        </label>
        <%= f.email_field :email, autofocus: false, autocomplete: "email", class: "w-full" %>
        <% if resource.errors[:email] %>
          <small class="error"><%= resource.errors[:email][0] %></small>
        <% end %>
      </div>

      <div class="flex w-full flex-col my-1">
        <label for="user_username">
          <%= t 'user.username' %>
        </label>
        <%= f.text_field :username, autofocus: false, class: "w-full" %>
        <% if resource.errors[:username] %>
          <small class="error"><%= resource.errors[:username][0] %></small>
        <% end %>
      </div>

      <div class="flex w-full flex-col my-1">
        <label for="user_password">
          <%= t 'auth.password' %>
        </label>
        <%# if @minimum_password_length %>
        <!--        <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
        <%# end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>

        <% if resource.errors[:password] %>
          <small class="error"><%= resource.errors[:password][0] %></small>
        <% end %>
      </div>

      <div class="flex w-full flex-col my-1">
        <label for="user_password_confirmation">
          <%= t 'auth.confirm_password' %>
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
        <% if resource.errors[:password_confirmation] %>
          <small class="error"><%= resource.errors[:password_confirmation][0] %></small>
        <% end %>
      </div>

      <button type="submit" class="self-center text-sm btn-primary mt-2 px-3 py-2">
        <%= t 'nav.signup' %>
      </button>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>

